<%= react_component('SendMessage', {is_conversation: {to_single_influencer: @influencer}, recipient: @recipient, authenticity_token: form_authenticity_token, url: @url}, {prerender: true}) %>

<%= form_for :campaign, url: :campaigns do |f| %>
    <div class="col-md-12">
      <div class="col-md-4"></div>
      <div class="col-md-8">
        <div class="form-group">
          <%= f.label :campaign_name %>
          <%= f.text_field :campaign_name, placeholder: "Campaign Name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :url %>
          <%= f.text_field :url, placeholder: "Enter your URL", class: "form-control" %>
        </div>
          <%= hidden_field_tag :id, @influencer %>
          <%= f.submit "Send Message", class: "btn btn-success" %>
      </div>
    </div>

<% end %>




