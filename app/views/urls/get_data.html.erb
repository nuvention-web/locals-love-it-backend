<div class= "row">
  <div class = "col-md-12">
    <h2> Stastics for: <%= @url.short_url %></h2>
  </div>
</div>
<div class = "row">
  <div class = "col-md-6">
    <div class = "panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Numbers</h3>
      </div>
      <div class="panel-body">
      <ul>
        <li>Links To: <%= @long_url%></li>
        <li>Clicks: <%= @clicks %></li>
        <li>By Day:
          <ul>
        <% @by_day.each do |element| %>
          <li><%= element.day_start %> : <%= element.clicks %> </li>
          <% end %>
        </ul>
      </ul>
    </div>
    </div>
  </div>
  <div class = "col-md-6">
    <div class = "panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Graphs</h3>
      </div>
      <div class="panel-body">
        <div class = "col-md-6">
          <img class = "graph-image" src= <%= @graph_url%> />
        </div>
        <div class = "col-md-6">
          <img class = "graph-image" src = <%= @social_shares_graph%> />
        </div>
    </div>
    </div>
  </div>
</div>
<div class = "row">
  <div class = "col-md-6 col-md-offset-5">
    <%= link_to "Create or view statstics on another URL", "/urls/new" %>
  </div>
</div>
